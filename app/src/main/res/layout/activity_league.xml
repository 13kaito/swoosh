<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Contrtoller.LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/backgroundImg"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:contentDescription="@string/background_image"/>
    <ImageView
            android:layout_width="124dp"
            android:layout_height="46dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/swooshLogo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/swoowsh_logo"/>
    <TextView
            android:text="@string/desire_to_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swooshLogo" android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat" android:textSize="18sp" android:textColor="@color/colorAccent"
            android:textAlignment="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="64dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp">
        <ToggleButton
                android:text="@string/mens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MensLeagueBtn" android:fontFamily="@font/montserrat"
                android:textOff="@string/mens" android:textOn="@string/mens" android:checked="false"
                android:background="@drawable/swoosh_toogle" android:textColor="@color/colorAccent"
                android:onClick="OnToggleClicked"/>
        <ToggleButton
                android:text="@string/womens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/WomensLeagueBtn" android:layout_marginTop="10dp"
                android:textOff="@string/womens" android:textOn="@string/womens" android:layout_marginBottom="10dp"
                android:textColor="@color/colorAccent" android:background="@drawable/swoosh_toogle"
                android:onClick="OnToggleClicked"/>
        <ToggleButton
                android:text="@string/co_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/CoedLeagueBtn" android:textOff="@string/co_ed"
                android:textOn="@string/co_ed" android:textColor="@color/colorAccent"
                android:background="@drawable/swoosh_toogle" android:onClick="OnToggleClicked"/>
    </LinearLayout>
    <Button
            android:text="@string/next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/FinishedBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:fontFamily="@font/montserrat"
            android:textColor="@color/colorAccent" android:background="@drawable/swoosh_button"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="LeagueNextClicked"/>
</android.support.constraint.ConstraintLayout>